<Window x:Class="PleasentRustleApp.Windows.AgentChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PleasentRustleApp.Windows"
        mc:Ignorable="d"
        Title="Редактирование агента" FontFamily="Monotype Corsiva" FontSize="16" MinHeight="585" MinWidth="760"
        Height="585" Width="760">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Margin="10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Image Source="/Resources/Приятный шелест.png"/>
                <TextBlock Text="Редактирование агента" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="30"/>
            </StackPanel>
            <Button x:Name="ExitBut" HorizontalAlignment="Right" Height="35" Width="60" Content="Назад" 
                    Click="ExitBut_Click" DockPanel.Dock="Right" Background="#46B29D" Foreground="White"/>
        </DockPanel>
        
    </Grid>
</Window>
